@model List<object[]>

@{
    Layout = null;
    ViewData["Title"] = "Öğretmen Paneli";
}

<!DOCTYPE html>
<html>
<head>
    <title>Yönetici Paneli - Proje Tablosu</title>
    <style>
        body {
            background-color: #add8e6; /* Bebe mavisi */
            margin: 0; /* Sayfa kenar boşluğunu kaldır */
            font-family: Arial, sans-serif; /* Genel yazı tipi */
        }

        .navbar {
            background-color: #fff; /* Beyaz */
            text-align: center; /* Metni ortala */
            padding: 20px 0; /* Üst ve alt boşluk */
            cursor: default; /* Navbar içindeki yazıya tıklanabilir olmaması */
        }

        .navbar-brand {
            font-weight: bold;
            color: #333; /* Siyah */
            font-size: 24px; /* Yazı boyutu */
            text-decoration: none; /* Altı çizgiyi kaldırma */
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-top: 20px; /* Tablonun üst boşluğu */
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
            background-color: #fff; /* Beyaz */
        }

        th {
            background-color: #f2f2f2;
        }

        button {
            display: block;
            margin: 20px auto; /* Dikey hizalama */
            padding: 10px 20px;
            background-color: #007bff; /* Koyu Mavi */
            color: #fff; /* Beyaz */
            border: none;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #0056b3; /* Koyu Mavinin Açık Tonu */
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#">İstanbul Aydın Üniversitesi Veri Yönetim Sistemi</a>
        </div>
    </nav>

    <div class="container">
        <h2>Proje Tablosu</h2>
        <table>
            <tr>
                <th>Proje Öneri Tarihi</th>
                <th>Proje Adı</th>
                <th>Proje Türü</th>
                <th>Proje Danışmanı</th>
                <th>Proje Yürütücüsü</th>
                <th>Proje Ekibi</th>
                <th>Proje Konusu</th>
                <th>Proje Amacı</th>
                <th>Proje Hedef Kitlesi</th>
                <th>Proje Süresi</th>
                <th>Proje Bütçesi</th>
                <th>Proje Etkinlikleri</th>
                <th>Proje Başlangıç Tarihi</th>
                <th>Proje Bitiş Tarihi</th>
                <th>Proje Kurum ve Kuruluşlar</th>
                <th>Proje Materyaller</th>
                <th>Sisteme Yükleyen</th>
                <th>Sisteme Yükleyen ID</th>
                <th>Proje ID</th>
                <th></th> <!-- silme butonu için boş sütun -->
            </tr>
            @foreach (var row in Model)
            {
                <tr>
                    <td>@row[0]</td> <!-- Proje Öneri Tarihi -->
                    <td>@row[1]</td> <!-- Proje Adı -->
                    <td>@row[2]</td> <!-- Proje Türü -->
                    <td>@row[3]</td> <!-- Proje Danışmanı -->
                    <td>@row[4]</td> <!-- Proje Yürütücüsü -->
                    <td>@row[5]</td> <!-- Proje Ekibi -->
                    <td>@row[6]</td> <!-- Proje Konusu -->
                    <td>@row[7]</td> <!-- Proje Amacı -->
                    <td>@row[8]</td> <!-- Proje Hedef Kitlesi -->
                    <td>@row[9]</td> <!-- Proje Süresi -->
                    <td>@row[10]</td> <!-- Proje Bütçesi -->
                    <td>@row[11]</td> <!-- Proje Etkinlikleri -->
                    <td>@row[12]</td> <!-- Proje Başlangıç Tarihi -->
                    <td>@row[13]</td> <!-- Proje Bitiş Tarihi -->
                    <td>@row[14]</td> <!-- Proje Kurum ve Kuruluşlar -->
                    <td>@row[15]</td> <!-- Proje Materyaller -->
                    <td>@row[16]</td> <!-- Sisteme Yükleyen -->
                    <td>@row[17]</td> <!-- Sisteme Yükleyen ID -->
                    <td>@row[18]</td> <!-- Proje ID -->
                    <td>
                        <form method="post" action="@Url.Action("Delete", "Home")">
                            <input type="hidden" name="id" value="@row[18]" /> <!-- bunu homecontrollerdaki fonksiyona iletip silme işlemini sağlıyoruz -->
                            <button type="submit">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </table>
    </div>

    <div>
        <form method="get" action="/Home/yoneticiSayfasi">
            <button type="submit">Yönetici Paneline Git</button>
        </form>
    </div>

</body>
</html>
